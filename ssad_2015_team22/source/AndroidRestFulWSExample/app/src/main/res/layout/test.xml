    <TextView
        android:id="@+id/login_error"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dip"
        android:textColor="#e30000"
        android:textStyle="bold" />

    <Button
        android:id="@+id/takeTest"
        android:layout_width="135dp"
        android:layout_height="38dp"
        android:layout_marginTop="20dip"
        android:background="@null"
        android:onClick="sendRequestForTest"
        android:text="Take Test"
        android:textColor="#228b22"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal" />

    <Button
        android:id="@+id/viewHistory"
        android:layout_width="135dp"
        android:layout_height="38dp"
        android:layout_marginTop="20dip"
        android:background="@null"
        android:onClick="navigatetoHistoryActivity"
        android:text="Test History"
        android:textColor="#228b22"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal" />

        <Button
            android:id="@+id/posting"
            android:layout_width="135dp"
            android:layout_height="38dp"
            android:layout_marginTop="20dip"
            android:background="@null"
            android:onClick="navigatetocreatePost"
            android:text="Create Post"
            android:textColor="#228b22"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal" />


